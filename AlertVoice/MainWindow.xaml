<Window x:Class="FFXIV.Tools.AlertVoice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:FFXIV.Tools.AlertVoice.Model"
        Title="MainWindow" Height="300" Width="200"
 >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Start" Click="Start_Click" />
            <Button Content="Stop" Click="Stop_Click" />
        </StackPanel>
        <TextBox Text="{Binding Text, Mode=TwoWay}" AcceptsReturn="True" BorderThickness="2" Margin="2" Grid.Row="1"/>
        <TextBox Text="{Binding DebugText, Mode=TwoWay}" AcceptsReturn="True" BorderThickness="2" Margin="2" Grid.Row="2"/>
    </Grid>
</Window>
